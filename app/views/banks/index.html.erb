<div class="panel box-shadow-none content-header">
  <div class="panel-body">
    <div class="col-md-12">
        <h3 class="animated fadeInLeft">Banks</h3>
        <p class="animated fadeInDown">
          Banks <span class="fa-angle-right fa"></span> All Banks
        </p>
    </div>
  </div>
</div>

<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading"><h3>Bank Accounts</h3></div>
      <div class="panel-body">
        <div class="responsive-table">
          <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">

            <thead>
              <tr>
                <th>Name</th>
                <th>Account No.</th>
                <th>Account Holder Name</th>
                <th>Status</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @banks.each do |bank| %>
                <tr>
                  <td><%= bank.name %></td>
                  <td><%= bank.acc %></td>
                  <td><%= bank.holder_name %></td>
                  <td><%= bank.status %></td>
                  <td><%= link_to 'Show', bank %></td>
                  <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
                  <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'New Bank', new_bank_path, class:"btn btn-round btn-primary" %>
      </div>
    </div>
  </div>
</div>