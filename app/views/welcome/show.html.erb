<div class="panel">
  <% if !current_user.nil? %>
    <div class="panel-body">
      <div class="col-md-6 col-sm-12">
        <h3 class="animated fadeInLeft">Welcome back, <%= current_user.name %></h3>
      </div>
      <div class="col-md-6 col-sm-12">
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-12 top-20 padding-0">
  <div class="col-md-6">

    <div class="panel">

      <div class="panel-heading"><h3>Home</h3></div>
      <div class="panel-body">
        <div class="responsive-table">
          <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name</th>
                <th>Acc</th>
                <th>Status</th>
                <% if current_user.role.name == "Admin" || current_user.role.name == "Super Admin" %>
                  <th colspan="3"></th>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <% @banks.each do |bank| %>
                <tr>
                  <td><%= bank.name %></td>
                  <td><%= bank.acc %></td>
                  <% if bank.status == "Active" %>
                    <td style="color:#27C24C;"><%= bank.status %></td>
                  <% else %>
                    <td style="color:#FF6656;"><%= bank.status %></td>
                  <% end %>
                  <% if current_user.role.name == "Admin" || current_user.role.name == "Super Admin" %>
                    <td><%= link_to 'Show', bank %></td>
                    <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
                    <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

<!--       <%= link_to 'View all accounts', user_accounts_path(@user) %><br>
      <%= link_to 'Deposit/Withdrawal', requests_path(@user) %> |
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
      <%= link_to 'Create new game account', new_user_account_path(@user) %>
 -->    </div>
  </div>
</div>