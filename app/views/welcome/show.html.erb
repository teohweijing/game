<div class="panel">
  <% if !current_user.nil? %>
    <div class="panel-body">
      <div class="col-md-6 col-sm-12">
        <h3 class="animated fadeInLeft">Welcome back, <%= current_user.name %></h3>
      </div>
      <div class="col-md-6 col-sm-12">
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-12 top-20 padding-0">
  <div class="col-md-6">

    <div class="panel">

      <div class="panel-heading"><h3>Home</h3></div>
      <div class="panel-body">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Acc</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @banks.each do |bank| %>
              <tr>
                <td><%= bank.name %></td>
                <td><%= bank.acc %></td>
                <td><%= bank.status %></td>
                <td><%= link_to 'Show', bank %></td>
                <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
                <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

<!--       <%= link_to 'View all accounts', user_accounts_path(@user) %><br>
      <%= link_to 'Deposit/Withdrawal', requests_path(@user) %> |
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', users_path %>
      <%= link_to 'Create new game account', new_user_account_path(@user) %>
 -->    </div>
  </div>
</div>