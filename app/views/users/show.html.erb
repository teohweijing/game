<div class="panel box-shadow-none content-header">
  <div class="panel-body">
    <div class="col-md-12">
        <h3 class="animated fadeInLeft">User</h3>
        <p class="animated fadeInDown">
          User <span class="fa-angle-right fa"></span> <%= @user.name %>
        </p>
    </div>
  </div>
</div>

<div class="col-md-6 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading"><h3><%= @user.name %></h3></div>
      <div class="panel-body">
        <div class="responsive-table">
          <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
            <tr>
              <td>Name:</td>
              <td><%= @user.name %></td>
            </tr>
            
            <tr>
              <td>Role:</td>
              <td><%= @user.role.name %></td>
            </tr>

            <tr>
              <td>Phone No:</td>
              <td><%= @user.phone_no %></td>
            </tr>

            <tr>
              <td>Email:</td>
              <td><%= @user.email %></td>
            </tr>

            <tr>
              <td>Joined On:</td>
              <td><%= @joined_on %></td>
            </tr>

            <tr>
              <td>Last logged in on:</td>
              <td><%= @last_login %></td>
            </tr>

            <tr>
              <td>No. times of logged in:</td>
              <td><%= @user.sign_in_count %></td>
            </tr>
          </table>
        </div>

        <%= link_to 'Create new game account', new_user_account_path(@user), class: "btn btn-round btn-success" %> | 
        <%= link_to 'Accounts', user_accounts_path(@user), class: "btn btn-round btn-primary" %>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-round btn-primary" %>

      </div>
    </div>
  </div>
</div>

